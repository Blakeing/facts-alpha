{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "import"],
  "env": {
    "browser": true,
    "es2024": true
  },
  "globals": {
    "defineProps": "readonly",
    "defineEmits": "readonly",
    "defineExpose": "readonly",
    "withDefaults": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-debugger": "error",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "warn"
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "**/*.d.ts",
    "**/auto-imports.d.ts",
    "**/components.d.ts",
    "**/typed-router.d.ts",
    "src/app/providers/router.ts"
  ]
}
